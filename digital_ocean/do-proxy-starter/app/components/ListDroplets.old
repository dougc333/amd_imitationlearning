"use client";
import * as React from "react";

type Droplet = {
  id: number;
  name: string;
  region?: { slug?: string };
  status?: string;
  networks?: { v4?: Array<{ ip_address?: string; type?: string }> };
};

function Spinner({ size = 16 }: { size?: number }) {
  const s = size, c = s / 2, r = c - 2, len = Math.PI * r;
  return (
    <svg width={s} height={s} viewBox={`0 0 ${s} ${s}`} role="status" aria-label="Loading"
         style={{ verticalAlign: "middle", marginRight: 8 }}>
      <circle cx={c} cy={c} r={r} stroke="currentColor" strokeWidth="2" fill="none" opacity="0.25" />
      <path d={`M ${c} ${c} m 0 -${r} a ${r} ${r} 0 1 1 0 ${2 * r} a ${r} ${r} 0 1 1 0 -${2 * r}`}
            stroke="currentColor" strokeWidth="2" strokeLinecap="round" fill="none"
            strokeDasharray={len} strokeDashoffset={len / 2}>
        <animateTransform attributeName="transform" type="rotate"
                          from={`0 ${c} ${c}`} to={`360 ${c} ${c}`} dur="0.9s"
                          repeatCount="indefinite" />
      </path>
    </svg>
  );
}

export default function ListDroplets({
  selectedId,
  onSelect,
  refreshKey = 0,
}: {
  selectedId?: number | null;
  onSelect: (id: number) => void;
  refreshKey?: number; // bump to refetch after deletions/creates
}) {
  const [loading, setLoading] = React.useState(false);
  const [error, setError] = React.useState<string | null>(null);
  const [droplets, setDroplets] = React.useState<Droplet[]>([]);

  const fetchDroplets = React.useCallback(async () => {
    setLoading(true);
    setError(null);
    try {
      const res = await fetch("/api/proxy/droplets", {
        headers: { Accept: "application/json" },
        cache: "no-store",
      });
      const ct = res.headers.get("content-type") || "";
      const body = ct.includes("application/json") ? await res.json() : await res.text();
      if (!res.ok) {
        setError(typeof body === "string" ? body : JSON.stringify(body, null, 2));
        setDroplets([]);
        return;
      }
      setDroplets(Array.isArray(body?.droplets) ? body.droplets : []);
    } catch (e: any) {
      setError(e?.message || String(e));
      setDroplets([]);
    } finally {
      setLoading(false);
    }
  }, []);

  React.useEffect(() => { fetchDroplets(); }, [fetchDroplets, refreshKey]);

  return (
    <div>
      <div style={{ display: "flex", alignItems: "center", gap: 8 }}>
        <h3 style={{ margin: 0 }}>Droplets</h3>
        <button onClick={fetchDroplets} disabled={loading}
                style={{ padding: "6px 10px", borderRadius: 6, border: "1px solid #ccc", background: "#f7f7f7" }}>
          {loading ? <><Spinner size={14}/> Refreshingâ€¦</> : "Refresh"}
        </button>
      </div>

      {error && (
        <pre style={{ background: "#fee", padding: 12, marginTop: 8, whiteSpace: "pre-wrap" }}>
          {error}
        </pre>
      )}

      {!error && (
        <div style={{ marginTop: 8, overflowX: "auto" }}>
          <table style={{ width: "100%", borderCollapse: "collapse" }}>
            <thead>
              <tr>
                <th style={{ textAlign: "left", padding: 8 }}>Select</th>
                <th style={{ textAlign: "left", padding: 8 }}>ID</th>
                <th style={{ textAlign: "left", padding: 8 }}>Name</th>
                <th style={{ textAlign: "left", padding: 8 }}>Region</th>
                <th style={{ textAlign: "left", padding: 8 }}>Status</th>
                <th style={{ textAlign: "left", padding: 8 }}>Public IPv4</th>
              </tr>
            </thead>
            <tbody>
              {droplets.map((d) => {
                const publicIP = d.networks?.v4?.find((n) => n.type === "public")?.ip_address || "";
                const isSel = selectedId === d.id;
                return (
                  <tr key={d.id} style={{ borderTop: "1px solid #eee" }}>
                    <td style={{ padding: 8 }}>
                      <input
                        type="radio"
                        name="droplet-select"
                        checked={isSel}
                        onChange={() => onSelect(d.id)}
                      />
                    </td>
                    <td style={{ padding: 8, fontFamily: "monospace" }}>{d.id}</td>
                    <td style={{ padding: 8 }}>{d.name}</td>
                    <td style={{ padding: 8 }}>{d.region?.slug || ""}</td>
                    <td style={{ padding: 8 }}>{d.status || ""}</td>
                    <td style={{ padding: 8, fontFamily: "monospace" }}>{publicIP}</td>
                  </tr>
                );
              })}
              {droplets.length === 0 && !loading && (
                <tr>
                  <td colSpan={6} style={{ padding: 12, color: "#555" }}>
                    No droplets found.
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      )}
    </div>
  );
}